{
  "name": "VCT Predictor",
  "description": "Valorant Champions Tour Match Prediction System with Auto-Scraping",
  "repository": "https://github.com/yourusername/vct-predictor",
  "logo": "https://raw.githubusercontent.com/yourusername/vct-predictor/main/static/VCT_2023_Americas.png",
  "keywords": ["valorant", "vct", "prediction", "esports", "flask", "python"],
  "env": {
    "FLASK_ENV": {
      "description": "Flask environment (production for Heroku)",
      "value": "production"
    },
    "PYTHONPATH": {
      "description": "Python path for the application",
      "value": "/app"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
